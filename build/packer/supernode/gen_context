#!/usr/bin/env bash
# Generate cloud-init seed ISO for Packer build using cloud-localds.
# Matches the one-apps build approach for Ubuntu cloud images.

set -euo pipefail

APPLIANCE_NAME="${1:?Usage: gen_context <appliance-name>}"
INPUT_DIR="$(dirname "$0")"

cloud-localds "${INPUT_DIR}/${APPLIANCE_NAME}-cloud-init.iso" "${INPUT_DIR}/cloud-init.yml"
